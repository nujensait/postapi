{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "A CRUD API for managing posts with user authentication using SQLite.",
  "main": "app.js",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "dev": "nodemon app.js",
    "start": "node app.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop crud-api",
    "pm2:restart": "pm2 restart crud-api",
    "pm2:delete": "pm2 delete crud-api",
    "pm2:logs": "pm2 logs crud-api",
    "pm2:monit": "pm2 monit"
  },
  "author": "Mikhail Ikonnikov",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "sqlite3": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^2.0.4",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
